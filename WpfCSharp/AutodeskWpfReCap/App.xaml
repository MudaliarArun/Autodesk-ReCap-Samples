<Application x:Class="AutodeskWpfReCap.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AutodeskWpfReCap"
    Startup="App_Startup"
	StartupUri="MainWindow.xaml"
    >
    <Application.Resources>

		<ResourceDictionary>
			<!-- Converters -->
			<local:ImageSourceConverter x:Key="ImageSourceConverter" />
			
			<ResourceDictionary.MergedDictionaries>
				<!-- Set default skin -->
				<ResourceDictionary Source="/MayaTheme;component/Themes/Skins/QadskDarkStyle.xaml" />
				<ResourceDictionary Source="/MayaTheme;component/Themes/MayaStyle.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</Application.Resources>
</Application>
